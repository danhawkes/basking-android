<?xml version="1.0" encoding="utf-8"?>
<manifest package="co.arcs.groove.basking"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          android:versionName="1.0.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19"/>

    <application
        android:name="co.arcs.groove.basking.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ThemeBasking">

        <activity
            android:name="co.arcs.groove.basking.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name="co.arcs.groove.basking.BaskingSyncService"/>

        <activity
            android:name="co.arcs.android.fileselector.FileSelectorActivity"
            android:label="@string/sync_directory"
            android:theme="@style/ThemeFileSelector.Dialog">
        </activity>
        
    </application>

</manifest>
