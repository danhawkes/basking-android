<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="hcpb_CircularProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="hcpb_stroke_width">5dp</item>
        <item name="hcpb_progress" format="float">0.1</item>
        <item name="hcpb_progress_color">#ffff4444</item>
        <item name="hcpb_progress_background_color">@android:color/background_light</item>
        <item name="hcpb_marker_visible">true</item>
        <item name="hcpb_thumb_visible">true</item>
    </style>

    <style name="hcpb_CircularProgressBarLight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="hcpb_stroke_width">5dp</item>
        <item name="hcpb_progress" format="float">0.1</item>
        <item name="hcpb_progress_color">#ffff4444</item>
        <item name="hcpb_progress_background_color">@android:color/darker_gray</item>
        <item name="hcpb_marker_visible">true</item>
        <item name="hcpb_thumb_visible">true</item>
    </style>
</resources>
